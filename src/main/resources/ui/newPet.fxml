<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.CreatePetController">
   <children>
      <VBox prefHeight="400.0" prefWidth="300.0">
         <children>
            <VBox>
               <children>
                  <Label text="Name*">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="petNameText">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
            <VBox>
               <children>
                  <Label text="Date of Birth*">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <DatePicker fx:id="birthDatePicker" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
            <VBox>
               <children>
                  <Label text="Gender">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <HBox spacing="10.0">
                     <children>
                        <RadioButton fx:id="genderMaleRadioButton" mnemonicParsing="false" selected="true" text="Male">
                           <toggleGroup>
                              <ToggleGroup fx:id="genderToggleGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="genderFemaleRadioButton" mnemonicParsing="false" text="Female" toggleGroup="$genderToggleGroup" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </VBox>
      <VBox layoutX="300.0" prefHeight="400.0" prefWidth="300.0">
         <children>
            <VBox>
               <children>
                  <Label text="Choose Pet">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <HBox spacing="30.0">
                     <children>
                        <RadioButton fx:id="catRadioButton" mnemonicParsing="false" selected="true" text="Cat">
                           <toggleGroup>
                              <ToggleGroup fx:id="typeToggleGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="dogRadioButton" mnemonicParsing="false" text="Dog" toggleGroup="$typeToggleGroup" />
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
            <VBox>
               <children>
                  <Label text="Date of Death">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <DatePicker fx:id="deathDatePicker" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="createNewButton" alignment="CENTER" mnemonicParsing="false" onAction="#createNewPet" onMouseClicked="#createNewPet" prefWidth="130.0" text="Create" />
                  <Label fx:id="requiredFields" text="*required fields are not filled" textFill="RED">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
